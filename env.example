# 資料庫配置
DATABASE_URL="postgresql://username:password@localhost:5432/my_board_of_directors"

# JWT 密鑰
JWT_SECRET="your-super-secret-jwt-key-here"

# AI 服務配置
AI_PROVIDER="mock"  # openai | perplexity | groq | openrouter | huggingface | mock | claude | local

# 付費 AI 服務
OPENAI_API_KEY="your-openai-api-key"
PERPLEXITY_API_KEY="your-perplexity-api-key"
CLAUDE_API_KEY="your-claude-api-key"

# 免費 AI 服務 (推薦)
GROQ_API_KEY="your-groq-api-key"
OPENROUTER_API_KEY="your-openrouter-api-key"
HUGGINGFACE_API_KEY="your-huggingface-api-key"

# Mock AI 服務 (完全免費，無需 API Key)
# 無需設置任何 API Key，直接使用

# Groq 配置 (免費，推薦)
GROQ_MODEL="llama3-8b-8192"
GROQ_TEMPERATURE="0.7"
GROQ_MAX_TOKENS="2000"
GROQ_TIMEOUT="30000"

# OpenRouter 配置 (免費)
OPENROUTER_MODEL="meta-llama/llama-3.1-8b-instruct:free"
OPENROUTER_TEMPERATURE="0.7"
OPENROUTER_MAX_TOKENS="2000"
OPENROUTER_TIMEOUT="30000"

# Perplexity 配置
PERPLEXITY_MODEL="llama-3.1-sonar-small-128k-online"
PERPLEXITY_TEMPERATURE="0.7"
PERPLEXITY_MAX_TOKENS="2000"
PERPLEXITY_TIMEOUT="30000"

# 支付配置
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# 應用配置
NEXT_PUBLIC_API_URL="http://localhost:8000"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Redis (可選，用於快取)
REDIS_URL="redis://localhost:6379"

# 郵件服務 (可選)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
